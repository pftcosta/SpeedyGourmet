@page
@model SpeedyGourmet.WebApp.Pages.Ingredients.GetAll
@{
}

<h2>Ingredients <i class="fa-solid fa-wheat-awn"></i></h2>
<br />

<div class="d-flex">
    <form method="post" class="d-flex">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Insert new Ingredient">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mx-2">Create <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </form>
</div>
<br />

<table class="table">

    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Ingredient ingredient in Model.Ingredients)
        {
            <tr>
                <td>@ingredient.Name</td>
                <td>
                    <a asp-page="/ingredients/Delete" asp-route-ingredientId="@ingredient.Id"><i class="fa-regular fa-trash-can" style="color: #d10000;"></i></a> /
                    <a asp-page="/ingredients/GetById" asp-route-ingredientId="@ingredient.Id"><i class="fa-regular fa-eye"></i></a> /
                    <a asp-page="/ingredients/Update" asp-route-ingredientId="@ingredient.Id"><i class="fa-solid fa-pencil"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>