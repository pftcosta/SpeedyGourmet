@page
@model SpeedyGourmet.WebApp.Pages.Ingredients.GetAllModel
@{
}

<br>

<div class="d-flex">

    <form method="post">

        <div class="form-group">
            <input name="name" class="form-control" placeholder="Insert new Ingredient">
        </div>

        <br>

        <button type="submit" class="btn btn-primary ml-2">Create</button>

    </form>


</div>

<br>

<table class="table">

    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var ingredient in Model.ingredients)
        {
            <tr>
                <td>@ingredient.Name</td>
                <td>
                    <a asp-page="/ingredients/Delete" asp-route-id="@ingredient.Id">Delete</a> /
                    <a asp-page="/ingredients/GetById" asp-route-id="@ingredient.Id">View</a> /
                    <a asp-page="/ingredients/Update" asp-route-id="@ingredient.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>

</table>
