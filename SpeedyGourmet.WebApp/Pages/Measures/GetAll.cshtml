@page
@model SpeedyGourmet.WebApp.Pages.Measures.GetAll
@{
}

<h2>Units of Measurement <i class="fa-solid fa-scale-balanced"></i></h2>
<br />

<div class="d-flex">
    <form method="post" class="d-flex">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Insert new Measure Unit">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mx-2">Create <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </form>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Measure measure in Model.Measures)
        {
            <tr>
                <td>@measure.Name</td>
                <td>
                    <a asp-page="/Measures/Delete" asp-route-measureId="@measure.Id"><i class="fa-regular fa-trash-can" style="color: #d10000;"></i></a> /
                    <a asp-page="/Measures/GetById" asp-route-measureId="@measure.Id"><i class="fa-regular fa-eye"></i></a> /
                    <a asp-page="/Measures/Update" asp-route-measureId="@measure.Id"><i class="fa-solid fa-pencil"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>