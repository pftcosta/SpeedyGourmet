@page
@model SpeedyGourmet.WebApp.Pages.Measures.GetAllModel
@{
}

<br>

<div class="d-flex">

    <form method="post">

        <div class="form-group">
            <input name="name" class="form-control" placeholder="Insert new Measure Unit">
        </div>

        <br>

        <button type="submit" class="btn btn-primary ml-2">Create</button>

    </form>


</div>

<br />

<table class="table">

    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Measure measure in Model.measures)
        {
            <tr>
                <td>@measure.Name</td>
                <td>
                    <a asp-page="/Measures/Delete" asp-route-id="@measure.Id">Delete</a> /
                    <a asp-page="/Measures/GetById" asp-route-id="@measure.Id">View</a> /
                    <a asp-page="/Measures/Update" asp-route-id="@measure.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>

</table>