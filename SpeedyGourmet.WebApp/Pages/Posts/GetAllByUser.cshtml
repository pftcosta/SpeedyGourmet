@page
@model SpeedyGourmet.WebApp.Pages.Posts.GetAllByUserModel
@{
}

<h2>List of Comments <i class="fa-regular fa-comments"></i></h2>
<br />

<div class="d-flex">
    <div class="form-group">
        <a class="btn btn-danger" asp-page="/Posts/GetAll">Return <i class="fa-solid fa-arrow-up-from-bracket"></i></a>
    </div>

    <form method="post" class="d-flex">
        <div class="form-group mx-2">
            <select name="id_user" class="form-control" style="width: 150px;">
                <label>Choose a user: </label>
                @foreach (Model.User user in Model.users)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Select <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </form>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Post post in Model.posts)
        {
            <tr>
                <td><i class="fa-solid fa-user"></i> @post.User.UserName Posted on @post.Recipe.Title with @post.Rating <i class="fa-regular fa-star"></i>'s</td>
                <td></td>
                <td>
                    <a asp-page="/posts/Delete" asp-route-id="@post.Id"><i class="fa-regular fa-trash-can"></i></a> /
                    <a asp-page="/posts/GetById" asp-route-id="@post.Id"><i class="fa-regular fa-eye"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>