@page
@model SpeedyGourmet.WebApp.Pages.Posts.GetAllByRecipe
@{
}

<h2>List of Comments <i class="fa-regular fa-comments"></i></h2>
<br />

<div class="d-flex">
    <div class="form-group">
        <a class="btn btn-danger" asp-page="/Posts/GetAll">Return <i class="fa-solid fa-arrow-up-from-bracket"></i></a>
    </div>

    <form method="post" class="d-flex">
        <div class="form-group mx-2">
            <select name="id_recipe" class="form-control" style="width: 150px;">
            <option>Choose a recipe</option>
            @foreach (Model.Recipe recipe in Model.Recipes)
            {
                <option value="@recipe.Id">@recipe.Title</option>
            }
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Select <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </form>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            @if (Model.MathRound() >= 1)
            {
                <th>Average @Model.MathRound() <i class="fa-solid fa-star"></i>'s</th>
                <th></th>
            }
            else
            {
                <th></th>
                <th></th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Post post in Model.Posts)
        {
            <tr>
            <td><i class="fa-solid fa-user"></i> @post.User.UserName Posted on @post.Recipe.Title with @post.Rating <i class="fa-regular fa-star"></i>'s</td>
            <td>
                    <a asp-page="/posts/Delete" asp-route-postId="@post.Id"><i class="fa-regular fa-trash-can" style="color: #d10000;"></i></a> /
                <a asp-page="/posts/GetById" asp-route-postId="@post.Id"><i class="fa-regular fa-eye"></i></a>
            </td>
            </tr>

        }
    </tbody>
</table>



