    <label>Get favourite list by user id: </label>

    <select name="id_user">
        <label>Choose a user: </label>
        @foreach (Model.User user in Model.users)
        {
            <option value="@user.Id">@user.UserName</option>
        }
    </select>

    <br>

    <button type="submit" class="btn btn-primary ml-2">Submit</button>

</form>

<table class="table">

    <thead>
        <tr>
            <th scope="col">User</th>
            <th scope="col">User Id</th>
            <th scope="col">Recipe</th>
            <th scope="col">Recipe Id</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Model.Favourite favourite in Model.favourites)
        {
            <tr>
                <td><a>@favourite.User.UserName</a></td>
                <td><a>@favourite.User.Id</a></td>
                <td><a>@favourite.Recipe.Title</a></td>
                <td><a>@favourite.Recipe.Id</a></td>
                <td>
                    <a asp-page="/Favourites/Delete" asp-route-id="@favourite.Id">Delete</a> /
                    <a asp-page="/Favourites/GetById" asp-route-id="@favourite.Id">View</a>
                </td>
            </tr>
        }

    </tbody>

</table>

<div class="d-flex justify-content-between">
    <a class="btn btn-danger" asp-area="" asp-page="/Favourites/GetAll"> Return <i class="bi bi-arrow-left"></i></a>
</div>