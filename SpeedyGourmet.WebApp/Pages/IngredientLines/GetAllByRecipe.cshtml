@page
@model SpeedyGourmet.WebApp.Pages.IngredientLines.GetAllByRecipe
@{
}

<h2>Recipe's Ingredient Lines <i class="fa-solid fa-list"></i></h2>
<br />

<form method="post" class="d-flex">
    <div class="d-flex">
        <select name="id_recipe" class="form-control" style="width: 150px;">
        <label>Choose a recipe: </label>
        @foreach (Model.Recipe recipe in Model.Recipes)
        {
            <option value="@recipe.Id">@recipe.Title</option>
        }
        </select>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary mx-2">Select Recipe <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </div>
</form>
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Recipe: @Model.IngredientLine.Recipe.Title</th>
            <th></th>
        </tr>
        <tr>
            <th scope="col">Ingredient List</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.IngredientLine ingredientLine in Model.IngredientLines)
        {
            <tr>
                <td><a>@ingredientLine.Quantity @ingredientLine.Measure.Name de @ingredientLine.Ingredient.Name</a></td>
                <td>
                    <a asp-page="/IngredientLines/Delete" asp-route-id="@ingredientLine.Id"><i class="fa-regular fa-trash-can" style="color: #d10000;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between">
    <a class="btn btn-danger" asp-area="" asp-page="/IngredientLines/GetAll"> Return to all ingredient list <i class="fa-solid fa-arrow-up-from-bracket"></i></a>
    <a class="btn btn-danger" asp-area="" asp-page="/IngredientLines/DeleteAllByRecipe" asp-route-id="@Model.IngredientLine.Recipe.Id"><i class="bi bi-arrow-right"></i> Delete all</a>
</div>