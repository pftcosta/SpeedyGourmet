<form method="post">
    <select name="id_ingredient">
        <option selected>Select an Ingredient</option>
        @foreach (Model.Ingredient ingredient in Model.ingredients)
        {

            <option value="@ingredient.Id">@ingredient.Name</option>
        }
    </select>

    <label>Quantity</label>
    <input type="number" name="quantity" class="form-control" placeholder="Enter Quantity">
    <br />

    <input hidden type="number" value="@Model.ingredientLine.Recipe.Id" name="id_recipe" />

    <select name="id_measure">
        <option selected>Select a Measure Unit</option>
        @foreach (Model.Measure measure in Model.measures)
        {

            <option value="@measure.Id">@measure.Name</option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Create </button>
</form>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Recipe: @Model.ingredientLine.Recipe.Title</th>
        </tr>
        <tr>
            <th scope="col">Ingredient List</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.IngredientLine ingredientLine in Model.ingredientLines)
        {
            <tr>
                <td><a>@ingredientLine.Quantity @ingredientLine.Measure.Name de @ingredientLine.Ingredient.Name</a></td>
                <td>
                    <a asp-page="/IngredientLines/Delete" asp-route-id="@ingredientLine.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between">
    <a class="btn btn-danger" asp-area="" asp-page="/IngredientLines/GetAll"> Return to all ingredient list <i class="fa-solid fa-arrow-up-from-bracket"></i></a>
    <a class="btn btn-danger" asp-area="" asp-page="/IngredientLines/DeleteAllByRecipe" asp-route-id="@Model.ingredientLine.Recipe.Id">
        <i class="bi bi-arrow-right"></i> Delete all</a>
</div>
