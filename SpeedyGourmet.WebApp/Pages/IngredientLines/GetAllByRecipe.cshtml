}

<h2>List of Ingredient Lines By Recipe<i class="fa-solid fa-list"></i></h2>
<br />

<form method="post" class="d-flex">
    <div class="d-flex mx-2">
        <select name="id_recipe" class="form-control" style="width: 150px;">
        <label>Choose a recipe: </label>
        @foreach (Model.Recipe recipe in Model.recipes)
        {
            <option value="@recipe.Id">@recipe.Title</option>
        }
        </select>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary mx-2">Create <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </div>
</form>

