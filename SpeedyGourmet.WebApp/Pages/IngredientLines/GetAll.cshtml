@page
@model SpeedyGourmet.WebApp.Pages.IngredientLines.GetAllModel
@{
}

<h2>List of All Ingredient Lines <i class="fa-solid fa-list"></i></h2>
<br />

<div class="d-flex justify-content-between">
    <a class="btn btn-danger" asp-area="" asp-page="/IngredientLines/GetAllByRecipe">View ingredient's list by a Recipe <i class="bi bi-arrow-left"></i></a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Ingredient Line</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.IngredientLine ingredientLine in Model.ingredientLines)
        {
            <tr>
                <td><a>@ingredientLine.Quantity @ingredientLine.Measure.Name de @ingredientLine.Ingredient.Name</a></td>
                <td>
                    <a asp-page="/IngredientLines/Delete" asp-route-id="@ingredientLine.Id"><i class="fa-regular fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>