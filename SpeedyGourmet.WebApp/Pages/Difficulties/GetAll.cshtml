@page
@model SpeedyGourmet.WebApp.Pages.Difficulties.GetAll
@{
}

<h2>Difficulties <i class="fa-solid fa-chart-simple"></i></h2>
<br />

<div class="d-flex">
    <form method="post" class="d-flex">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Insert new Difficulty">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mx-2">Create <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </form>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Difficulty difficulty in Model.difficulties)
        {
            <tr>
                <td>@difficulty.Name</td>
                <td>
                    <a asp-page="/Difficulties/Delete" asp-route-id="@difficulty.Id"><i class="fa-regular fa-trash-can" style="color: #d10000;"></i></a> /
                    <a asp-page="/Difficulties/GetById" asp-route-id="@difficulty.Id"><i class="fa-regular fa-eye"></i></a> /
                    <a asp-page="/Difficulties/Update" asp-route-id="@difficulty.Id"><i class="fa-solid fa-pencil"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>