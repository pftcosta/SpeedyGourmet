@page
@model SpeedyGourmet.WebApp.Pages.Recipee.GetById
@{
}

<div class="form-group">
    <a class="btn btn-danger" asp-page="/Recipes/GetAll">Return to home <i class="fa-solid fa-arrow-up-from-bracket"></i></a>
    <a class="btn btn-primary" asp-page="/Recipes/GetAllByUserId" asp-route-userId="@Model.Recipe.Author.Id">Return to User's List</a>
    <a class="btn btn-dark" asp-page="/Posts/Create" asp-route-userId="@Model.Recipe.Author.Id">Comment <i class="fa-solid fa-comments"></i></a>
    <a class="btn btn-primary" asp-page="/Favourites/Create" asp-route-userId="@Model.Recipe.Author.Id" asp-route-recipeId="@Model.Recipe.Id">Add to Favourites <i class="fa-solid fa-heart"></i></a>
</div>

<h1>Title: @Model.Recipe.Title by: @Model.Recipe.Author.UserName</h1>
<h4> <p>ID: @Model.Recipe.Id</p></h4>
<h4> <p>Category: @Model.Recipe.Category.Name</p></h4>
<h6> <p>Preparation Time: @Model.Recipe.PrepTime minutes</p></h6>

<table class="table">
    <thead>
        <tr>
            <th>Ingredient's List</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredients in Model.Recipe.Ingredients)
        {
            <tr>
                <td>@ingredients.Quantity @ingredients.Measure.Name de @ingredients.Ingredient.Name</td>
            </tr>
        }
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>Preparation Method</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Recipe.PrepMethod</td>
        </tr>
    </tbody>
</table>
