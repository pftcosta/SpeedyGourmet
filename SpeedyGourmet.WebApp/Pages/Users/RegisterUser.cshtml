@page
@model SpeedyGourmet.WebApp.Pages.Users.RegisterUserModel
@{
}

<h2>List of Users <i class="fa-regular fa-user"></i></h2>
<br />

<form method="post">
    <div class="form-group">
        <input name="name" class="mr-2" placeholder="Name">
    </div>

    <br />

    <div class="form-group">
        <input name="username" class="mr-2" placeholder="User name">
    </div>

    <br />

    <div class="form-group">
        <input name="email" class="mr-2" placeholder="Email">
    </div>

    <br />

    <div class="form-group">
        <input name="password" class="mr-2" placeholder="Password">
    </div>

    <br />

    <p>Admin User</p>
    <input type="radio" id="iszero" name="is_admin" value="false">
    <label for="iszero">No</label>
    <input type="radio" id="isone" name="is_admin" value="true">
    <label for="isone">Yes</label>

    <br />

    <p>Block User</p>
    <input type="radio" id="iszero" name="is_blocked" value="false">
    <label for="iszero">No</label>
    <input type="radio" id="isone" name="is_blocked" value="true">
    <label for="isone">Yes</label>

    <br />

    <button type="submit" class="btn btn-primary">Register User <i class="fa-solid fa-arrow-right"></i></button>
</form>