<h3>Create new User <i class="fa-solid fa-user"></i></h3>
<div class="d-flex">
    <form method="post" class="d-flex">
        <div>
            <input name="name" class="form-control" style="width: 150px" placeholder="Name">
        </div>
        <br />

        <div>
            <input name="username" class="form-control mx-2" style="width: 150px" placeholder="User name">
        </div>
        <br />

        <div>
            <input name="email" class="form-control mx-2" style="width: 150px" placeholder="Email">
        </div>
        <br />

        <div>
            <input name="password" class="form-control mx-2" style="width: 150px" placeholder="Password">
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary mx-2">Create User <i class="fa-solid fa-arrow-right"></i></button>
        </div>
    </form>
</div>
<br />


<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Admin</th>
            <th scope="col">Blocked</th>
            <th scope="col">Actions</th>
            <th scope="col">True Actions</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model.users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.UserName</td>
                <td>@user.IsAdmin</td>
                <td>@user.IsBlocked</td>
                <td class="d-flex">
                    <label>Block User</label>
                    <input type="radio" id="iszeroblock" name="is_blocked" value="false">
                    <label for="iszeroblock">No</label>

                    <input type="radio" id="isoneblock" name="is_blocked" value="true">
                    <label for="isoneblock">Yes</label>
                </td>
                <td>
                    <a asp-page="/users/Delete" asp-route-id="@user.Id"><i class="fa-regular fa-trash-can"></i></a> /
                    <a asp-page="/users/GetById" asp-route-id="@user.Id"><i class="fa-regular fa-eye"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>