@page
@model SpeedyGourmet.WebApp.Pages.Users.GetAllModel
@{
}

<br>

<form method="post">
    <div class="form-group">
        <input name="name" class="mr-2" placeholder="Name">
    </div>

    <br>

    <div class="form-group">
        <input name="username" class="mr-2" placeholder="User name">
    </div>

    <br>

    <div class="form-group">
        <input name="email" class="mr-2" placeholder="Email">
    </div>

    <br>

    <div class="form-group">
        <input name="password" class="mr-2" placeholder="Password">
    </div>

    <br>

    <p>Admin User</p>
    <input type="radio" id="iszero" name="is_admin" value="false">
    <label for="iszero">No</label>
    <input type="radio" id="isone" name="is_admin" value="true">
    <label for="isone">Yes</label>

    <br>

    <p>Block User</p>
    <input type="radio" id="iszero" name="is_blocked" value="false">
    <label for="iszero">No</label>
    <input type="radio" id="isone" name="is_blocked" value="true">
    <label for="isone">Yes</label>

    <br>
    <br>
    <br>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<br>

<table class="table">

    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Admin</th>
            <th scope="col">Blocked</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model.users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.UserName</td>
                <td>@user.IsAdmin</td>
                <td>@user.IsBlocked</td>
                <td>
                    <a asp-page="/users/Delete" asp-route-id="@user.Id">Delete</a> /
                    <a asp-page="/users/GetById" asp-route-id="@user.Id">View</a>
                </td>
            </tr>
        }
    </tbody>

</table>