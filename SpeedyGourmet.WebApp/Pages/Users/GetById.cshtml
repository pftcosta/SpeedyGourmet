@page
@model SpeedyGourmet.WebApp.Pages.Users.GetByIdModel
@{
}

<h2>Edit User <i class="fa-solid fa-user"></i></h2>
<br />

<table class="table">

    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Admin</th>
            <th scope="col">Blocked</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.user.Id</td>
            <td>@Model.user.Name</td>
            <td>@Model.user.UserName</td>
            <td>@Model.user.Email</td>
            <td>*****</td>
            <td>@Model.user.IsAdmin</td>
            <td>@Model.user.IsBlocked</td>
            <td>
                <a asp-page="/users/Delete" asp-route-id="@Model.user.Id"><i class="fa-regular fa-trash-can"></i></a>
            </td>
        </tr>
    </tbody>

</table>

<form method="post" class="d-group">
    <div class="d-flex">
        <input type="hidden" id="id" name="id" class="form-control mx-2" style="width: 150px" value="@Model.user.Id" readonly>

        <div>
            <input name="name" class="form-control" style="width: 150px" placeholder="Name">
        </div>
        <br />

        <div>
            <input name="username" class="form-control mx-2" style="width: 150px" placeholder="User name">
        </div>
        <br />

        <div>
            <input name="email" class="form-control mx-1" style="width: 150px" placeholder="Email">
        </div>
        <br />

        <div>
            <input name="password" class="form-control mx-1" style="width: 150px" placeholder="Password">
        </div>
    </div>
    <br />

    <div class="d-flex">
        <fieldset class="form-control" style="width: 200px">
            <label>Admin</label>
            <input class="align-content-center" type="radio" id="iszero" name="is_admin" value="false">
            <label class="align-content-bottom" for="iszero">No</label>

            <input class="centre" type="radio" id="isone" name="is_admin" value="true">
            <label class="centre" for="isone">Yes</label>
        </fieldset>
    
        <fieldset class="form-control mx-2" style="width: 200px">
            <label>Block User</label>
            <input type="radio" id="iszeroblock" name="is_blocked" value="false">
            <label for="iszeroblock">No</label>

            <input type="radio" id="isoneblock" name="is_blocked" value="true">
            <label for="isoneblock">Yes</label>
        </fieldset>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Edit User <i class="fa-solid fa-arrow-right"></i></button>
        <a class="btn btn-danger" asp-area="" asp-page="/Users/GetAll">Return <i class="fas fa-arrow-up-from-bracket"></i></a>
    </div>
    </div>
    
</form>

